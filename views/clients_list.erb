<h2>Here are the list of clients for <%= @stylists.name %> :</h2>

<% if @stylists.clients().any?() %>
  <h3>Here is a list of all clients</h3>
    <ul>
    <% @stylists.clients.each() do |client| %>
    <li><%= client.name() %></li>
    <% end %>
    </ul>
<% else %>
  <h3>There are no clients</h3>
<% end %>

<a href='/stylists/<%=@stylists.id()%>/add_clients'>Add New Client</a>

<h3> Update Stylists name </h3>
<form action='/stylists/<%=@stylists.id()%>/list_clients' method='post'>
  <input name='_method' type='hidden' value='patch'>
  <label for='stylists_name'>Rename the stylist</label>
  <input id='stylists_name' name='stylists_name' type='text'>
  <button type='submit'>Update</button>
</form>

<form action='/stylists/<%=@stylists.id()%>/list_clients' method='post'>
  <input name='_method' type='hidden' value='delete'>
  <button type='submit'>Delete Stylist</button>
</form>
